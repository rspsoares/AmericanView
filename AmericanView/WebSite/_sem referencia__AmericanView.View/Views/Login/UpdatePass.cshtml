@model Keeptrue.Conciliador.View.Models.ModificarSenha
@{
    ViewBag.Title = "Alterar Senha";
}

@section breadcrumbs{
    <ol class="breadcrumb">
        <li><span class="glyphicon glyphicon-home"></span> <a href="@Url.Action("Index", "Home")" title="Home">Home</a></li>
        <li class="active">Alterar Senha</li>
    </ol>
}

<h1>Alterar Senha</h1>
<br />

<div class="col-lg-4 col-lg-offset-3 col-md-4 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12" style="margin-top: 10px;">
    <div class="control-group well">
        @using (Html.BeginForm("UpdatePass", "Login"))
        {
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.DisplayNameFor(c => c.OldPassword)
                @Html.PasswordFor(c => c.OldPassword, new { @id = "txtSenha", @style = "width: 100%;", @class = "k-textbox" })
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(c => c.NewPassword)
                @Html.PasswordFor(c => c.NewPassword, new { @id = "txtNovaSenha", @style = "width: 100%;", @class = "k-textbox" })
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(c => c.NewPasswordConfirm)
                @Html.PasswordFor(c => c.NewPasswordConfirm, new { @id = "txtRepetirNovaSenha", @style = "width: 100%;", @class = "k-textbox" })
            </div>

            <div class="form-group">
                <button id="btnAlterarSenha" type="submit" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-pencil"></span> Alterar Senha</button>
            </div>
        }
    </div>
</div>