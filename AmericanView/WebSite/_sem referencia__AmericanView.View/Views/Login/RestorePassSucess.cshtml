@{
    Layout = null;
}
<!DOCTYPE html>
<html class="no-js" lang="pt-br" id="htmlpage" ng-app>
<head>
    <!-- META TAGS -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Portal de Apuração de Tributos." />
    <meta name="keywords" content="Portal de Apuração de Tributos, Mosaic, portal, tributos" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="title" content="Portal de Apuração de Tributos" />
    <meta name="url" content="www.keeptrue.com.br" />
    @*<meta http-equiv="content-type" content="text/html; charset=ISO-8859-1" />*@
    <meta name="author" content="KeepTrue" />
    <meta name="company" content="KeepTrue" />
    <meta name="revisit-after" content="7" />
    <link rev="made" href="mailto:suporte@keeptrue.com" />
    <meta http-equiv="Content-Language" content="pt-br">

    <title>..:: Portal de Apuração de Tributos- Esqueci minha senha ::..</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")

    <style type="text/css">
        html {
            background: none;
        }

        @@media only screen and (max-width: 767px) {
            #HeaderContainer {
                min-height: 45px;
            }
        }
    </style>
</head>
<body>
    <div id="Container" class="wrap">
        @* -- CABEÇALHO -- *@
        <header id="HeaderContainer">
            <div id="Header">
                <div class="col-xs-12">
                    @* -- APP NAME -- *@
                    <div id="kt-appname">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="@Url.Content("~/Content/images/layout/logo-mosaic.png")" title="Mosaic" alt="Mosaic" />
                        </a>
                    </div>
                </div>
            </div>
        </header>
        @* -- FIM CABEÇALHO -- *@
        <!-- Conteúdo -->
        <div id="ContentContainer">
            <!-- CONTAINER CONTENT -->
            <div id="Center-Container">
                <div class="col-lg-4 col-lg-offset-3 col-md-4 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12" style="margin-top: 10px;">
                    <div class="legend">Recuperação de senha enviado</div>

                    <div class="control-group well">
                        <p>
                            Você receberá um e-mail para a confirmação de sua
                            solicitação de recuperação de senha. Uma vez recebido o e-mail
                            siga as instruções para configurar uma nova senha.
                        </p>
                        <p>Obrigado!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- Rodapé -->
        <div id="FooterContainer">
            <div id="Footer">
                <div class="col-xs-12">
                    <small>&#174; @DateTime.Now.Year.ToString() - Todos direitos reservados.</small>
                    <a href="http://www.keeptrue.com" target="_blank">
                        <img src="@Url.Content("~/Content/images/layout/logo-keeptrue.png")" title="Desenvolvido por KeepTrue" alt="Desenvolvido por KeepTrue" />
                    </a>
                </div>
            </div>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js-pepsico")
</body>
</html>