@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js" lang="pt-br" id="htmlpage" ng-app>
<head>
    <!-- META TAGS -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Portal de Apuração de Impostos Mosaic." />
    <meta name="keywords" content="Portal de Apuração, Impostos, mosaic, piscofins" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="title" content="Apuração de Impostos - Mosaic" />
    <meta name="url" content="www.keeptrue.com.br" />
    @*<meta http-equiv="content-type" content="text/html; charset=ISO-8859-1" />*@
    <meta name="author" content="KeepTrue" />
    <meta name="company" content="KeepTrue" />
    <meta name="revisit-after" content="7" />
    <link rev="made" href="mailto:suporte@keeptrue.com" />
    <meta http-equiv="Content-Language" content="pt-br">

    <title>..:: Portal de Apuração de Tributos - QA & Dev ::..</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @model Keeptrue.Conciliador.View.Models.Registro

    <style type="text/css">
        html {
            background: none;
        }

        @@media only screen and (max-width: 767px) {
            #HeaderContainer {
                min-height: 45px;
            }
        }
    </style>
</head>
<body>
    <div id="Container" class="wrap">
        @* -- CABEÇALHO -- *@
        <header id="HeaderContainer">
            <div id="Header">
                <div class="col-xs-12">
                    @* -- APP NAME -- *@
                    <div id="kt-appname">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="@Url.Content("~/Content/images/layout/logo-mosaic.png")" title="PepsiCo" alt="PepsiCo" />
                        </a>
                    </div>
                </div>
            </div>
        </header>
        @* -- FIM CABEÇALHO -- *@

        <!-- Conteúdo -->
        <div id="ContentContainer">
            <!-- CONTAINER CONTENT -->
            <div id="Center-Container">
                <div class="col-lg-4 col-lg-offset-3 col-md-4 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12" style="margin-top: 10px;">
                    <div class="legend">Criação de usuário</div>

                    <div class="control-group well">
                        @using (Html.BeginForm("Index", "Registrar"))
                        {
                            @Html.ValidationSummary()
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.DisplayNameFor(c => c.Role)
                                @Html.DropDownListFor(model => model.Role, Model.Roles, new { @id = "ddlRoles", @style = "width: 100%", @class = "k-item" })
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(c => c.Username)
                                @Html.TextBoxFor(c => c.Username, new { @id = "txtUsername", @style = "width: 100%;", @class = "k-textbox", @autofocus = "" })
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(c => c.FirstName)
                                @Html.TextBoxFor(c => c.FirstName, new { @id = "txtNome", @style = "width: 100%;", @class = "k-textbox" })
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(c => c.LastName)
                                @Html.TextBoxFor(c => c.LastName, new { @id = "txtSobrenome", @style = "width: 100%;", @class = "k-textbox" })
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(c => c.Email)
                                @Html.TextBoxFor(c => c.Email, new { @id = "txtEmail", @style = "width: 100%;", @class = "k-textbox" })
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(c => c.MobilePhoneNumber)
                                @Html.TextBoxFor(c => c.MobilePhoneNumber, new { @id = "txtPhone", @style = "width: 100%;", @class = "k-textbox" })
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(c => c.Password)
                                @Html.PasswordFor(c => c.Password, new { @id = "txtSenha", @style = "width: 100%;", @class = "k-textbox" })
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(c => c.ConfirmPassword)
                                @Html.PasswordFor(c => c.ConfirmPassword, new { @id = "txtRepetirSenha", @style = "width: 100%;", @class = "k-textbox" })
                            </div>
                            <button type="submit" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-pencil"></span> Registrar</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rodapé -->
    <div id="FooterContainer">
        <div id="Footer">
            <div class="col-xs-12">
                <small>&#174; @DateTime.Now.Year.ToString() - Todos direitos reservados.</small>
                <a href="http://www.keeptrue.com" target="_blank">
                    <img src="@Url.Content("~/Content/images/layout/logo-keeptrue.png")" title="Desenvolvido por KeepTrue" alt="Desenvolvido por KeepTrue" />
                </a>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js-pepsico")
    @*@RenderSection("scripts", required: false)*@
</body>
</html>
