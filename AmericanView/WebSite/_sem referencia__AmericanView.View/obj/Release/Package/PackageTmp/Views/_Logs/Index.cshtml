@{
    ViewBag.Title = "Logs";
}

@section scripts {
    <script src="@Url.Content("/Content/js/app/logs/logs.js")" type="text/javascript"></script>
    <script type="text/javascript">
        /* -- Setar Class em expand menu -- */
        window.onload = setActiveMenu;
        function setActiveMenu() {
            $('li#configLogs').addClass('active');
            $('.mini-nav ul li#configLogs ul').attr('style', 'display: none !important;');
        }

        $(document).ready(function () {
            GetMatriz(); 
            //GetImpostos();
            GetApuracoes();

            $('#collapseFilter').collapse('show');
            $('#accordion .panel .panel-heading').children('h4').children('small').children('span').removeAttr('class');
            $('#accordion .panel .panel-heading').children('h4').children('small').children('span').attr('class', 'glyphicon glyphicon-chevron-down');
        });
        
    </script>
}

@section breadcrumbs{
    <ol class="breadcrumb">
        <li><span class="glyphicon glyphicon-home"></span> <a href="@Url.Action("Index", "Home")" title="Home">Home</a></li>
        <li>Configurações</li>
        <li class="active">Logs de Configuração</li>
    </ol>
}

<h1>Logs de Configuração</h1>
<br />

@Html.Partial("_FilterApuracoes")

<div class="row" style="margin-bottom: 15px;">
    <div class="col-sm-12">
        <div id="grid"></div>
    </div>
</div>

@* -- Popup de Visualizar Logs -- *@
<div id="modalViewLogs" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"><strong>Detalhes da Modificação</strong></h4>
            </div>
            <div class="modal-body">
                <form id="logsForm">
                    <div class="row">

                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="padding-bottom: 1px;">
                            <input type="hidden" id="idLog" name="idLog" />
                            <div class="form-group">
                                <label><strong>Usuário</strong></label>
                                <input type="text" id="usuarioTxt" name="usuarioTxt" class="k-textbox" style="width: 100%;" disabled="disabled" />
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="padding-bottom: 1px;">
                            <div class="form-group">
                                <label><strong>Ocorrência</strong></label>
                                <input type="text" id="ocorrenciaTxt" name="ocorrenciaTxt" class="k-textbox" style="width: 100%;" disabled="disabled" />
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-bottom: 1px;">
                            <div class="form-group">
                                <label><strong>Descrição</strong></label>
                                <textarea type="text" id="descricaoTxt" name="descricaoTxt" class="k-textbox" style="width: 100%;" rows="5" disabled="disabled"></textarea>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnVoltar" class="btn btn-danger btn-xs" onclick="javascript: { FecharModal(this); }">
                    <span class="glyphicon glyphicon-remove"></span> Fechar
                </button>
            </div>
        </div>
    </div>
</div>
