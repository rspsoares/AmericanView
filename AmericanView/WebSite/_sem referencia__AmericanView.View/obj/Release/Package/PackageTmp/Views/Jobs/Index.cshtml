@{
    ViewBag.Title = "Tarefas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
<script src="@Url.Content("/Content/js/app/utilidades/jobs.js")" type="text/javascript"></script>

<script type="text/javascript">
    /* -- Setar Class em expand menu -- */
    window.onload = setActiveMenu;
    function setActiveMenu() {
        $('li#usuarios').addClass('active');
        $('.mini-nav ul li#usuarios ul').attr('style', 'display: none !important;');
    }
    $(document).ready(function () {
        CarregaComponentes();
    });
</script>



<script type="text/x-kendo-template" id="templateToolbar">
    <a class="k-button" onclick="javascript: { AtualizarGrid(); }">
        <span class="glyphicon glyphicon-refresh"></span>
    </a>
</script>
}

@section breadcrumbs{
    <ol class="breadcrumb">
        <li><span class="glyphicon glyphicon-home"></span> <a href="@Url.Action("Index", "Home")" title="Home">Home</a></li>
        <li class="active">Tarefas</li>
    </ol>
}

