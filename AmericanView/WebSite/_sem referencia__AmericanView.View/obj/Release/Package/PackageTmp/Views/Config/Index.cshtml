@{
    ViewBag.Title = "Configurações";
}

@section scripts {
    <script src="@Url.Content("/Content/js/app/configuracoes.js")" type="text/javascript"></script>
    <script type="text/javascript">
        /* -- Setar Class em expand menu -- */
        window.onload = setActiveMenu;
        function setActiveMenu() {
            $('li#configuracoes').addClass('active');
        }

        $(document).ready(function () {
            CarregaComponentes();
            $("#txtNumDevNota, #txtNumDevProduto, #txtHigienizacao, #txtLimpezaLog").kendoNumericTextBox({
                format: "0",
                decimals: 0,
                min: 0,
                step: 1
            });
        });
    </script>
}

@section breadcrumbs{
    <ol class="breadcrumb">
        <li><span class="glyphicon glyphicon-home"></span> <a href="@Url.Action("Index", "Home")" title="Home">Home</a></li>
        <li class="active">Configurações</li>
    </ol>
}

<h1>Configurações</h1>
<br />

<div class="row">
    <form>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <button type="button" id="btEditar" class="btn btn-success btn-xs" onclick="javascript: { EditarConfiguracoes(); }" style="float: left;">
                            <span class="glyphicon glyphicon glyphicon-pencil"></span> Editar
                        </button>
                        <br />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="padding-left: 30px;">
                <div class="form-group">
                    <label>Quantidade de Notas Fiscais por páginas</label><br />
                    <input type="text" id="txtNumDevNota" name="txtNumDevNota" placeholder="Quantidade de Notas por página" class="input-sm" style="width: 25%;" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label>Quantidade de Produtos por página</label><br />
                    <input type="text" id="txtNumDevProduto" name="txtNumDevProduto" placeholder="Quantidade de Produtos por página" class="input-sm" style="width: 25%;" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="padding-left: 30px;">
                <div class="form-group">
                    <label>Prazo para Higienização do Banco de Dados <strong>(dias)</strong></label><br />
                    <input type="text" id="txtHigienizacao" name="txtHigienizacao" placeholder="Higienização do Banco de Dados" class="input-sm" style="width: 25%;" />
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label>Prazo para Limpeza do LOG <strong>(dias)</strong></label><br />
                    <input type="text" id="txtLimpezaLog" name="txtLimpezaLog" placeholder="Limpeza de Log" class="input-sm" style="width: 25%;" />
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group">
                <button type="button" id="btnVoltar" onclick='javascript:{Voltar();}' class="btn btn-danger btn-xs" style="display: none;">
                    <span class=" glyphicon glyphicon-arrow-left"></span> Voltar
                </button>
                <button type="button" id="btnSalvar" onclick='javascript:{SalvarConfigs();}' class="btn btn-success btn-xs" style="display: none;">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
                </button>
            </div>
        </div>
    </form>
</div>
