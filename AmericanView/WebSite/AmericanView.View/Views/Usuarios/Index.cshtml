@{
    ViewBag.Title = "Usuários";
}

@section breadcrumbs{
    <ol class="breadcrumb">
        <li><span class="glyphicon glyphicon-home"></span> <a href="@Url.Action("Index", "Home")" title="Home">Home</a></li>
        <li>Cadastros</li>
        <li class="active">Usuários</li>
    </ol>
}

@section scripts {
    <script src="@Url.Content("/Content/js/app/cadastros/usuarios/usuarios.js")" type="text/javascript"></script>
    <script type="text/javascript">
        /* -- Setar Class em expand menu -- */
        window.onload = setActiveMenu;
        function setActiveMenu() {
            $('li#usuarios').addClass('active');
            $('.mini-nav ul li#usuarios ul').attr('style', 'display: none !important;');
        }
        $(document).ready(function () {
            $('#selectStatusUsr').bootstrapSwitch();
            $("#selectGrupoUsr").kendoMultiSelect({
                placeholder: "Escolha ...",
                dataTextField: "text",
                dataValueField: "value",
                change: function (e) {
                    HandleGroupChange();
                }
            });

            CarregaComponentes();
        });
    </script>
}

<h1>Usuários</h1>
<br />

<div class="panel-group" id="accordion">
    <div class="panel panel-primary">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapseFilter">
            <h4 class="panel-title">
                <small><span class="glyphicon glyphicon-chevron-right"></span></small> Filtros
            </h4>
        </div>
        <div id="collapseFilter" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="row">
                    <form>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label><strong>Nome</strong></label>
                                        <input type="text" id="txtNomeFiltro" name="txtNomeFiltro" data-field="Nome" data-operator="contains" placeholder="Nome" class="k-textbox filter" style="width: 100%;" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label><strong>Login</strong></label>
                                        <input type="text" id="txtLoginFiltro" name="txtLoginFiltro" data-field="Login" data-operator="contains" placeholder="Login" class="k-textbox filter" style="width: 100%;" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label><strong>E-Mail</strong></label>
                                        <input type="text" id="txtEmailFiltro" name="txtEmailFiltro" data-field="Email" data-operator="contains" placeholder="E-Mail" class="k-textbox filter" style="width: 100%;" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label><strong>Perfil</strong></label>
                                        <input id="selectPerfilFiltro" style="width: 100%;" data-field="Perfil" data-operator="eq" class="filter" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label><strong>Status</strong></label>
                                        <input id="selectStatusFiltro" style="width: 100%;" data-field="Status" data-operator="eq" class="filter" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label><strong>Situação Senha</strong></label>
                                        <input id="selectBloqueadoFiltro" style="width: 100%;" data-field="Bloqueado" data-operator="eq" class="filter" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <button type="button" id="btnPesquisarUsuarios" class="btn btn-success btn-xs">
                                    <span class="glyphicon glyphicon-search"></span> Pesquisar
                                </button>
                                <button type="button" id="btnLimparPequisa" class="btn btn-danger btn-xs">
                                    <span class="glyphicon glyphicon-remove"></span> Limpar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <button id="btnIncluirUsr" type="button" class="btn btn-success btn-xs" style="float: right;"><span class="glyphicon glyphicon-plus-sign" onclick="IncluirUsuario()"></span> Incluir</button>
    <br /><br />
</div>

<div class="row" style="margin-bottom: 15px;">
    <div class="col-sm-12">
        <div id="grid"></div>
    </div>
</div>

<div id="modalEditarUsuario" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <center><h4 class="modal-title"><strong></strong></h4></center>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="idUsuario" />
                    <input type="hidden" id="uqUsuario" />
                    <form id="usuarioForm">
                        <div class="col-xs-12">
                            @*1ª Linha*@
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-bottom: 0px;">
                                <div class="form-group">
                                    <label for="txtNome">Nome</label> <br />
                                    <input type="text" class="k-textbox" id="txtNome" name="txtNome" placeholder="Nome completo" style="width: 100%" minlength="2" required>
                                </div>
                            </div>
                            @*2ª Linha*@
                            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" style="padding-bottom: 0px;">
                                <div class="form-group">
                                    <label for="txtLogin">Login</label> <br />
                                    <input type="text" class="k-textbox" id="txtLogin" name="txtLogin" placeholder="Login" style="width: 100%" minlength="2" required>
                                </div>
                            </div>
                            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12" style="padding-bottom: 0px;">
                                <div class="form-group">
                                    <label for="txtEmail">E-Mail</label> <br />
                                    <input type="text" class="k-textbox" id="txtEmail" name="txtEmail" placeholder="E-mail" style="width: 100%" required>
                                </div>
                            </div>
                            @*3ª Linha*@
                            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" style="padding-bottom: 0px;">
                                <div class="form-group">
                                    <label for="txtTel">Telefone</label> <br />
                                    <input type="text" class="k-textbox" id="txtTel" name="txtTel" placeholder="Telefone" style="width: 100%">
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" style="padding-bottom: 0px;">
                                <div class="form-group">
                                    <label for="selectStatusUsr">Status</label> <br />
                                    <input id="selectStatusUsr" type="checkbox" data-field="selectStatusUsr" checked data-on-text="ATIVO" data-off-text="INATIVO" data-size="small" style="width: 100%;">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" style="padding-bottom: 0px;">
                                <div class="form-group">
                                    <label for="selectPerfilUsr">Perfil</label> <br />
                                    <input id="selectPerfilUsr" style="width: 100%;" data-field="selectPerfilUsr" class="filter" required />
                                </div>
                            </div>
                            @*4ª Linha*@
                            @*<div class="col-lg-10 col-md-10 col-sm-6 col-xs-6" style="padding-bottom: 0px;">
                                <div class="form-group">
                                    <label>Contas</label> <br />
                                    <input type="hidden" id="tbIdInscricao" value="0" />
                                    <label id="lbInscricaoSelecionada" style="font-weight:bold">Nenhuma Conta selecionada.</label> 
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-6 col-xs-6" style="padding-bottom: 0px;">
                                <label></label>
                                <button type="button" id="btnAccountSearch" class="btn btn-primary btn-xs" onclick="javascript: { $('#modalInscricoes').modal({ backdrop: 'static', keyboard: false }); }" style="float: left; margin-bottom: 10px;" disabled>
                                    <span class="glyphicon glyphicon-repeat"></span> Selecionar a Conta
                                </button>
                            </div>*@
                            @*5ª Linha*@
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-bottom: 0px;">
                                @*<div id="gridGroupAccount" style="display: none"></div>*@
                                @*<div id="gridGroupAccount"></div>*@
                            </div>
                            @*6ª Linha*@
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-bottom: 0px;">
                                <div class="form-group">
                                    <label for="selectGrupoUsr">Grupos</label> <br />
                                    <select id="selectGrupoUsr" style="width: 100%;" data-field="selectGrupoUsr" multiple="multiple" data-placeholder="Escolha ..."></select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnVoltar" class="btn btn-success btn-xs" onclick="javascript: { FecharModal(this); }">
                    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
                </button>
                <button type="button" id="btnEditar" class="btn btn-warning btn-xs" onclick="javascript: { EditarVisualizacaoUsuario(); }">
                    <span class="glyphicon glyphicon-pencil"></span> Editar
                </button>
                <button type="button" id="btnReenvioEmail" class="btn btn-primary btn-xs" onclick="javascript: { ReenviarEmailUsuario(); }">
                    <span class="glyphicon glyphicon-envelope"></span> Reenviar confirmação
                </button>                
                <button type="button" id="btnCancelar" class="btn btn-danger btn-xs" onclick="javascript: { FecharModal(this); }">
                    <span class="glyphicon glyphicon-remove"></span> Cancelar
                </button>
                <button type="button" id="btnSalvar" class="btn btn-success btn-xs" onclick="javascript: { SalvarUsuario(); }">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
                </button>
            </div>
        </div>

    </div>
</div>

<div id="modalCancelarEdicao" class="modal fade">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <center><h4 class="modal-title">Cancelar alterações</h4></center>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" id="btnCancelar" class="btn btn-danger btn-xs" onclick="javascript: { $('#modalCancelarEdicao').modal('hide'); }">
                    <span class="glyphicon glyphicon-remove"></span> Não
                </button>
                <button type="button" id="btnOk" class="btn btn-success btn-xs" onclick="javascript: { $('#modalCancelarEdicao').modal('hide'); $('#modalEditarUsuario').modal('hide'); }">
                    <span class="glyphicon glyphicon-ok"></span> Sim
                </button>
            </div>
        </div>
    </div>
</div>