@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js" lang="pt-br" id="htmlpage" ng-app>
<head>
    <!-- META TAGS -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="title" content="American View - Sistema Administrativo" />
    <meta name="revisit-after" content="7" />
    <meta http-equiv="Content-Language" content="pt-br">   

    <title>..:: American View - Criação de usuário ::..</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @model AmericanView.View.Models.ChangeEmailFromKeyInputModel

    <style type="text/css">
        html {
            background: none;
        }

        @@media only screen and (max-width: 767px) {
            #HeaderContainer {
                min-height: 45px;
            }
        }
    </style>
</head>
<body>
    <div id="Container" class="wrap">
        <!-- Conteúdo -->
        <div id="ContentContainer">
            <!-- CONTAINER CONTENT -->
            <div id="Center-Container">
                <div class="col-lg-4 col-lg-offset-3 col-md-4 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12" style="margin-top: 10px;">
                    <div class="legend">Criação de usuário</div>

                    <div class="control-group well">
                        @using (Html.BeginForm("Confirm", "Registrar"))
                        {
                            @Html.ValidationSummary()
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.DisplayNameFor(c => c.Password)
                                @Html.PasswordFor(c => c.Password, new { @id = "txtSenha", @style = "width: 100%;", @class = "k-textbox", @autofocus = "" })
                            </div>
                            @Html.HiddenFor(c => c.Key)
                            <button type="submit" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-ok-sign"></span> Confirmar criação</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rodapé -->
    <div id="FooterContainer">
        <div id="Footer">
            <div class="col-xs-12">
                <small>&#174; @DateTime.Now.Year.ToString() - Todos direitos reservados.</small>             
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/bootstrap")
    
</body>
</html>
