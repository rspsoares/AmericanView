@model Keeptrue.Conciliador.Cruzamento.Domain.Entities.CruzResultResumo

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="@Url.Content("/Content/jszip/jszip.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Content/js/app/cruzamento/detalhe/detalhe.js")" type="text/javascript"></script>
}

@section breadcrumbs{
    <ol class="breadcrumb">
        <li><span class="glyphicon glyphicon-home"></span> <a href="@Url.Action("Index", "Home", new { area = "" })" title="Home">Home</a></li>
        <li><a href="@Url.Action("Index", "Tarefas", new { area = "EFD" })" title="Tarefas">Tarefas</a></li>
        <li><a href="@Url.Action("Index", "Resumo", new { area = "EFD", idControle = Model.IdControle })" title="Resultados">Resultados</a></li>
        <li class="active">Detalhes</li>
    </ol>
}

<h1>Detalhes</h1>
<br />
<h2>@ViewBag.NomeEmpresa</h2>
<br />

@Html.HiddenFor(model => model.IdControle, new { id = "hddIdControle" })
@Html.HiddenFor(model => model.IdCruzamento, new { id = "hddIdCruzamento" })
@Html.HiddenFor(model => model.IdRegra, new { id = "hddIdRegra" })

@Html.HiddenFor(model => model.Regra, new { id = "hddRegra" })
@Html.HiddenFor(model => model.RegraOcorrencia, new { id = "hddRegraOcorrencia" })
@Html.HiddenFor(model => model.NumOcorrencias, new { id = "hddNumOcorrencia" })

<div class="row" style="margin-left: 5px;">
    <table cellspacing="2" cellpadding="4" style="margin-top: 10px;width:100%;">
        <tr style="margin-top: 10px;">
            <td style="padding: 5px;width:5%; text-align:right">
                <label style ="font-weight:bold">Regra: </label>
            </td>
            <td style="padding: 5px;width:80%">
                <label id="lbRegra" name="lbRegra"  />
            </td>
        </tr>
        <tr style="margin-top: 10px;">
            <td style="padding: 5px;width:5%; text-align:right">
                <label style="font-weight:bold">Descrição:</label>
            </td>
            <td style="padding: 5px;width:80%">
                <label id="lbDescricao" name="lbDescricao"  />
            </td>
        </tr>
        <tr style="margin-top: 10px;">
            <td style="padding: 5px;width:5%; text-align:right">
                <label style="font-weight:bold">Ocorrências:</label>
            </td>
            <td style="padding: 5px;width:80%">
                <label id="lbOcorrencias" name="lbOcorrencias" />
            </td>
        </tr>
    </table>
</div>
<br />

<div class="row" style="margin-bottom: 15px;">
    <div class="col-sm-12">
        <div id="grid"></div>
    </div>
</div>

@Html.Partial("DetalheModal")
