@model Keeptrue.Conciliador.Cruzamento.Domain.Entities.TCDControle

@{
    ViewBag.Title = "Resultados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {

    <script src="@Url.Content("/Content/js/app/cruzamento/resumo/resumo.js")" type="text/javascript"></script>
    

    <script id="srcResumoColAction" type="text/x-kendo-template">
        #if(NumOcorrencias > 0) { #
            <a onclick="location.href = '/EFD/Detalhe/Index/?idControle=#=IdControle#&idCruzamento=#=IdCruzamento#&idRegra=#=IdRegra#'" class='k-button' align='center'><span align='center' class='glyphicon glyphicon glyphicon-search'></span></a>
        # } else { #
            <a class='k-button' disabled><span class='glyphicon glyphicon glyphicon-search'></span></a>
        # } #
    </script>
}

@section breadcrumbs{
    <ol class="breadcrumb">
        <li><span class="glyphicon glyphicon-home"></span> <a href="@Url.Action("Index", "Home", new { area = "" })" title="Home">Home</a></li>
        <li><a href="@Url.Action("Index", "Tarefas", new { area = "EFD" })" title="Tarefas">Tarefas</a></li>
        <li class="active">Resultados</li>
    </ol>
}

<h1>@ViewBag.Title</h1>
<br />
<h2>@ViewBag.NomeEmpresa</h2>
<br />
@Html.HiddenFor(model => model.Id, new { id = "hddIdControle"})
<div class="row" style="margin-bottom: 15px;">
    <div class="col-sm-12">
        <div id="grid"></div>
    </div>
</div>
