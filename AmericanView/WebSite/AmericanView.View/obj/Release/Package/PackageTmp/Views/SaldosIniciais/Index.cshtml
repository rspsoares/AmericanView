<h1>Créditos do Período Inicial</h1>
<br />

@Html.Partial("_FilterSaldos")

<div class="panel-body">
    <div class="row">
        <form id="filter-form">
            <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <label><strong>Período</strong></label>
                            <input id="txtPeriodo" name="txtPeriodo" value="01/2015" style="width: 30%;" disabled="disabled" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6 pull-right">
                            <div class="col-sm-3 col-lg-3">
                                <label><strong>PIS</strong></label>
                            </div>
                            <div class="col-sm-3 col-lg-3">
                                <label><strong>COFINS</strong></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">                        
                        <div class="col-sm-6 col-lg-6">
                            <label><strong>Crédito MI - vinculado a receita tributada MI</strong></label>                            
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredMIPIS" name="txtCredMIPIS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredMICOFINS" name="txtCredMICOFINS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <label><strong>Crédito MI - vinculado a receita não tributada MI</strong></label>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredNMIPIS" name="txtCredNMIPIS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredNMICOFINS" name="txtCredNMICOFINS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <label><strong>Crédito MI - vinculado a receita de exportação</strong></label>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredMIEPIS" name="txtCredMIEPIS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredMIECOFINS" name="txtCredMIECOFINS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <label><strong>Crédito Importação - vinculado a receita tributada MI</strong></label>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredImpMIPIS" name="txtCredImpMIPIS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredImpMICOFINS" name="txtCredImpMICOFINS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <label><strong>Crédito Importação - vinculado a receita não tributada MI</strong></label>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredImpNMIPIS" name="txtCredImpNMIPIS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredImpNMICOFINS" name="txtCredImpNMICOFINS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <label><strong>Crédito Importação - vinculado a receita de exportação</strong></label>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredImpMIEPIS" name="txtCredImpMIEPIS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                            <div class="col-sm-3 col-lg-3">
                                <input id="txtCredImpMIECOFINS" name="txtCredImpMIECOFINS" type="number" value="0.00" min="-9999999999.99" max="9999999999.99" step="10000.00" style="width: 100%;" disabled="disabled" />
                            </div>
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                <div class="panel-group k-content" id="accordionValidacoes">
                    <div class="panel panel-primary">
                        <div class="panel-heading" data-toggle="collapse" data-parent="#accordionValidacoes" href="#collapseFilterValidacoes">
                            <h4 class="panel-title">
                                <small><span class="glyphicon glyphicon-chevron-right"></span></small> Histórico
                            </h4>
                        </div>
                        <div id="collapseFilterValidacoes" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12 col-sm-12">
                                        <div id="gridHistorico"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <button type="button" id="btnSalvarSaldos" class="k-primary">
                                <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
                            </button>
                            <button type="button" id="btnLimparSaldos" >
                                <span class="glyphicon glyphicon-trash"></span> Limpar Valores
                            </button>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <button type="button" id="btnHabilitarEdicao" class="pull-right" value="0">
                                <span class="glyphicon glyphicon-pencil"></span> Habilitar Edição
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>